<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">//shape样式
    //圆角
    <corners android:radius="8dp" />
    //边框
    <stroke
        android:width="1dp"
        android:color="@color/color_333333" />
    //内边距
    <padding
        android:bottom="8dp"
        android:left="8dp"
        android:right="8dp"
        android:top="8dp" />
    //内部填充
    <solid android:color="@color/white" />
</shape>