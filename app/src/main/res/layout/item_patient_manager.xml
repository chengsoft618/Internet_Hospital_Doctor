<cn.longmaster.hospital.doctor.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_patient_manager_content_sbv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp">

    <RelativeLayout
        android:id="@+id/item_patient_manager_content_rl"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:background="@color/color_f2f2f2">

        <LinearLayout
            android:id="@+id/item_my_data_delete_view"
            android:layout_width="161dp"
            android:layout_height="161dp"
            android:layout_toRightOf="@+id/item_patient_manager_item_rl"
            android:background="@drawable/bg_solid_45aef8_radius_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_wait_rounds_patient_relation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/activity_wait_rounds_patient_relation"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/item_patient_manager_item_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_solid_ffffff_radius_10">

            <TextView
                android:id="@+id/item_patient_manager_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="15dp"
                android:maxLines="1"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/item_patient_manager_gender_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/item_patient_manager_name_tv"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/item_patient_manager_age_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/item_patient_manager_gender_tv"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/item_patient_manager_no_association_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="19dp"
                android:layout_marginRight="10dp"
                android:text="未关联就诊"
                android:textColor="@color/color_7d7e7f"
                android:textSize="@dimen/font_size_14"
                android:visibility="visible" />

            <TextView
                android:id="@+id/item_patient_manager_association_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="19dp"
                android:layout_toLeftOf="@+id/item_patient_manager_association_num_tv"
                android:text="关联就诊："
                android:textColor="@color/color_7d7e7f"
                android:textSize="@dimen/font_size_14"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_patient_manager_association_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="19dp"
                android:layout_marginRight="10dp"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_14"
                android:visibility="gone" />

            <View
                android:id="@+id/item_patient_manager_v"
                style="@style/horizontal_line_light_1"
                android:layout_below="@+id/item_patient_manager_name_tv"
                android:layout_marginTop="8dp" />

            <TextView
                android:id="@+id/item_patient_manager_in_hospital_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_patient_manager_v"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:text="住院号:"
                android:textColor="#ff7d7e7f"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_patient_manager_in_hospital_num_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_patient_manager_v"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/item_patient_manager_in_hospital_num_tv"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_patient_manager_patient_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_patient_manager_in_hospital_num_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="病例号:"
                android:textColor="@color/color_7d7e7f"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_patient_manager_patient_num_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_patient_manager_in_hospital_num_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/item_patient_manager_patient_num_tv"
                android:maxLines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_patient_manager_confirm_sick_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_patient_manager_patient_num_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="诊断疾病:"
                android:textColor="@color/color_7d7e7f"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_patient_manager_confirm_sick_desc_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_patient_manager_patient_num_tv"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_toRightOf="@+id/item_patient_manager_confirm_sick_tv"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_14" />
        </RelativeLayout>

    </RelativeLayout>

</cn.longmaster.hospital.doctor.view.SlidingButtonView>
