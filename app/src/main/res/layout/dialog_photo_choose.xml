<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_photo_choose_camera_tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_solid_ffffff_t_radius_10"
            android:gravity="center"
            android:text="@string/rounds_add_medical_record_photograph"
            android:textColor="@color/color_157efb"
            android:textSize="@dimen/font_size_18" />

        <View style="@style/horizontal_line_light_1" />

        <TextView
            android:id="@+id/dialog_photo_choose_album_tv"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_solid_ffffff_b_radius_10"
            android:gravity="center"
            android:text="@string/rounds_add_medical_record_album"
            android:textColor="@color/color_157efb"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>

    <TextView
        android:id="@+id/dialog_photo_choose_cancel_tv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_solid_ffffff_radius_10"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_20" />
</LinearLayout>
