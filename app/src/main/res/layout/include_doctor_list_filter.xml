<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_white">

    <CheckBox
        android:id="@+id/include_order_by_visit_cb"
        android:layout_width="86dp"
        android:layout_height="match_parent"
        android:button="@null"
        android:drawableRight="@drawable/bg_doctor_list_order_type"
        android:drawablePadding="4dp"
        android:gravity="center_vertical|end"
        android:text="接诊次数"
        android:textColor="@drawable/bg_txt_color_666666_049eff"
        android:textSize="@dimen/font_size_14" />

    <CheckBox
        android:id="@+id/include_order_by_evaluation_cb"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:button="@null"
        android:drawableRight="@drawable/bg_doctor_list_order_type"
        android:drawablePadding="4dp"
        android:gravity="center_vertical|end"
        android:text="评价"
        android:textColor="@drawable/bg_txt_color_666666_049eff"
        android:textSize="@dimen/font_size_14" />

    <CheckBox
        android:id="@+id/include_order_by_hospital_cb"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:button="@null"
        android:drawableRight="@drawable/bg_doctor_list_order_type"
        android:drawablePadding="4dp"
        android:gravity="center_vertical|end"
        android:text="医院排名"
        android:textColor="@drawable/bg_txt_color_666666_049eff"
        android:textSize="@dimen/font_size_14" />

    <com.allen.library.SuperTextView
        android:id="@+id/include_filter_stv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:paddingRight="10dp"
        app:sRightTextColor="@color/color_1a1a1a"
        app:sRightTextSize="@dimen/font_size_16"
        app:sRightTextString="筛选"
        app:sRightTvDrawableHeight="14dp"
        app:sRightTvDrawableRight="@mipmap/ic_doctor_list_filter_pre"
        app:sRightTvDrawableWidth="14dp"
        app:sTextViewDrawablePadding="2dp" />

</LinearLayout>