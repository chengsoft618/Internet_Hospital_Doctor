<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/bg_solid_ffffff_radius_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_consul_record_disease_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="疾病名称:"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_consul_record_disease_name_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_consul_record_disease_name_tv"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_consul_record_disease_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_consul_record_disease_name_desc_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:text="疾病时间:"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_consul_record_disease_time_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_consul_record_disease_name_desc_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/item_consul_record_disease_time_tv"
        android:text=""
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_consultation_disease_record_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_consul_record_disease_time_desc_tv"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:background="@drawable/bg_solid_f9f9f9_radius_5"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/appoint_action_view_record"
        android:textColor="@color/color_049eff"
        android:textSize="@dimen/font_size_12" />
</RelativeLayout>