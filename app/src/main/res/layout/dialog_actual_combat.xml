<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="55dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_solid_ffffff_radius_10"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/dialog_newest_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/medical_college_newest"
            android:textColor="@color/text_color_45aef8_5999c3"
            android:textSize="@dimen/font_size_16" />

        <View
            android:layout_width="33dp"
            android:layout_height="1dp"
            android:background="@color/color_45aef8" />

        <TextView
            android:id="@+id/dialog_hottest_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/medical_college_hottest"
            android:textColor="@color/text_color_45aef8_5999c3"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</LinearLayout>