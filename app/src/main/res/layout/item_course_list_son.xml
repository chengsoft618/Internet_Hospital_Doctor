<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/item_course_list_children_name_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="55dp"
            android:text="COPD指南教学+病例教学查房（1/4)"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/item_course_list_children_iv"
            android:layout_width="40dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_course_appointment"
            android:gravity="center"
            android:text="预约"
            android:textColor="@color/color_45aef8"
            android:textSize="@dimen/font_size_12" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="10dp"
        android:background="@color/color_eeeeee" />
</LinearLayout>