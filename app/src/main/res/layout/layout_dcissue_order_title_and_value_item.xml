<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/layout_dcissue_order_title_and_value_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="转诊方"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_dcissue_order_title_and_value_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="北京大学人民医院贵州附属第8888医院"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/font_size_14" />
    </LinearLayout>

    <View
        android:id="@+id/layout_dcissue_order_title_and_value_divider_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_e6e6e6" />
</LinearLayout>
