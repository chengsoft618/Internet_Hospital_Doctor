<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_item_card"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_card_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_layout_item_common"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_card_icon_iv"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/ic_logo_union_pay" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_card_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="银行卡"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_card_info_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="尾号8080 储蓄卡"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/item_cardholder_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="7dp"
                android:text="持卡人：王某"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_card_select_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:src="@drawable/ic_select_account"
            android:visibility="visible" />
    </LinearLayout>

    <View style="@style/horizontal_line_light" />
</LinearLayout>