<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chat_right_voice_msg_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone">

    <ProgressBar
        android:id="@+id/chat_right_voice_wait"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone" />

    <TextView
        android:id="@+id/chat_right_voice_time_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone"
        tools:text="60'" />

    <RelativeLayout
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_right_green_bubble"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/chat_right_voice_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/ic_chat_right_voice"
            android:gravity="right" />
    </RelativeLayout>
</LinearLayout>
