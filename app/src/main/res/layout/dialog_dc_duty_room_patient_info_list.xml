<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_solid_ffffff_radius_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_dc_duty_room_patient_list_add_tv"
        android:layout_width="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_height="44dp"
        android:drawableLeft="@mipmap/ic_blue_white_plus"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="新建患者"
        android:textColor="@color/color_049eff"
        android:textSize="@dimen/font_size_14"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dialog_dc_duty_room_patient_list_title_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="查看患者资料"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_16" />

    <ImageView
        android:id="@+id/dialog_dc_duty_room_patient_list_close_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:src="@mipmap/ic_dcissue_order_close" />

    <View
        android:id="@+id/dialog_dc_duty_room_patient_list_title_v"
        style="@style/horizontal_line_light_1"
        android:layout_below="@+id/dialog_dc_duty_room_patient_list_title_tv" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/dialog_dc_duty_room_patient_list_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialog_dc_duty_room_patient_list_title_v">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/dialog_dc_duty_room_patient_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
</RelativeLayout>