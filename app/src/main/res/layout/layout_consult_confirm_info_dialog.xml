<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_transport"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_consult_confirm_iv"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="-32.5dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_solid_ffffff_radius_10"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingTop="68dp"
        android:paddingRight="20dp">

        <TextView
            android:id="@+id/layout_consult_confirm_info_patient_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/confirm_patient_name"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_patient_name_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/layout_consult_confirm_info_patient_name_tv"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_phone_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_patient_name_tv"
            android:layout_marginTop="10dp"
            android:text="@string/confirm_phone_num"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_phone_num_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_patient_name_tv"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/layout_consult_confirm_info_phone_num_tv"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_doctor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_phone_num_tv"
            android:layout_marginTop="10dp"
            android:text="@string/confirm_consult_doctor"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_doctor_name_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_below="@+id/layout_consult_confirm_info_phone_num_tv"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/layout_consult_confirm_info_doctor_name_tv"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_consult_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_doctor_name_desc_tv"
            android:layout_marginTop="10dp"
            android:text="@string/confirm_consult_time"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_consult_date_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_doctor_name_desc_tv"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/layout_consult_confirm_info_consult_date_tv"
            android:text="时间待定"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />


        <TextView
            android:id="@+id/layout_consult_confirm_info_cost_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_consult_date_desc_tv"
            android:layout_marginTop="10dp"
            android:text="@string/confirm_consult_cost"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/layout_consult_confirm_info_cost_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_consult_confirm_info_consult_date_desc_tv"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/layout_consult_confirm_info_cost_tv"
            android:text="待定"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_below="@+id/layout_consult_confirm_info_cost_tv"
            android:layout_marginTop="83dp"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/layout_consult_confirm_info_cancel_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/bg_solid_dbdbdb_radius_45"
                android:gravity="center"
                android:text="@string/cancel"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/layout_consult_confirm_info_confirm_tv"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="32dp"
                android:background="@drawable/bg_solid_049eff_radius_45"
                android:gravity="center"
                android:text="@string/confirm"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>
    </RelativeLayout>

    <ImageView
        android:id="@+id/layout_consult_confirm_iv"
        android:layout_width="175dp"
        android:layout_height="44dp"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/ic_consult_add_confirm_title" />
</RelativeLayout>
