<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_my_assess_doctor_name_tv"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_my_assess_course_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_16"
                tools:text="COPD病例查房COPD病例查房COPD病例查房" />

            <TextView
                android:id="@+id/item_my_assess_stage_serial_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:background="@drawable/bg_assess_stage_serial_blue"
                android:textColor="@color/color_45aef8"
                android:textSize="@dimen/font_size_12"
                tools:text="第一阶段" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_my_assess_doctor_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_12"
            tools:text="刘国梁" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/item_my_assess_date_tv"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_my_assess_attending_doctor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_14"
                tools:text="赵1" />

            <TextView
                android:id="@+id/item_my_assess_direction_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="21dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_14"
                tools:text="COPD研究方向COPD研究方向COPD研究方向" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_my_assess_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/font_size_12"
            tools:text="3月27日 15：00" />

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_app_background" />
</LinearLayout>
