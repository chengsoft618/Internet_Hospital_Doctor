<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/color_049eff"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/doctor_list_search_title_back_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:padding="14dp"
        android:src="@mipmap/ic_actionbar_back_white" />

    <com.allen.library.SuperTextView
        android:id="@+id/fragment_doctor_list_search_stv"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="15dp"
        app:sBackgroundDrawableRes="@drawable/bg_solid_fffffff_radius_17"
        app:sCenterLines="1"
        app:sCenterTextColor="@color/color_666666"
        app:sCenterTextSize="@dimen/font_size_13"
        app:sCenterTextString="请输入医院名称"
        app:sDividerLineType="none"
        app:sLeftTvDrawableLeft="@mipmap/ic_doctor_list_search" />

</LinearLayout>
