<?xml version="1.0" encoding="utf-8"?>
<cn.longmaster.doctorlibrary.util.photo.SquareItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_layout_item_represent_function"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_represent_function_img_aiv"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/item_represent_function_text_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/represent_function_consult_manage"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</cn.longmaster.doctorlibrary.util.photo.SquareItemLayout>
