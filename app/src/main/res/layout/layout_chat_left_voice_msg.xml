<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_chat_msg_type_left_voice_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_chat_left_green_bubble"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/chat_left_voice_volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:background="@drawable/ic_chat_left_voice" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_chat_msg_type_left_voice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_14"
        tools:text="60'" />
</LinearLayout>
