<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp">


    <LinearLayout
        android:id="@+id/item_visit_screen_doctor_layout_ll"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/bg_solid_00000000_stroke_45aef8_radius_40"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="6dp"
        android:paddingRight="6dp">

        <TextView
            android:id="@+id/item_visit_screen_doctor_text_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/text_color_45aef8_b4defc"
            android:textSize="@dimen/font_size_14"
            tools:text="推荐专家" />

        <ImageView
            android:id="@+id/item_visit_screen_doctor_star_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:src="@drawable/ic_star" />
    </LinearLayout>

    <ImageView
        android:id="@+id/item_visit_screen_doctor_red_point_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_visit_sign" />
</RelativeLayout>


