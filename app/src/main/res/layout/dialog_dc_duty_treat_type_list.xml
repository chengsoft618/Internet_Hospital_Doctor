<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="60dp"
    android:background="@drawable/bg_solid_ffffff_radius_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_dc_duty_treat_type_title_tv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="选择本次就诊类型"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_16" />

    <ImageView
        android:id="@+id/dialog_dc_duty_treat_type_close_iv"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:src="@mipmap/ic_dcissue_order_close" />

    <View
        android:id="@+id/dialog_dc_duty_treat_type_title_v"
        style="@style/horizontal_line_light_1"
        android:layout_below="@+id/dialog_dc_duty_treat_type_title_tv" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_dc_duty_treat_type_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/dialog_dc_duty_treat_type_title_v" />
</RelativeLayout>