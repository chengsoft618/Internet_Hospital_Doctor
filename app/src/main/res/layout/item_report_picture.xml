<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_patient_information_middle_white"
    android:orientation="vertical">


    <View
        android:id="@+id/item_report_picture_line_view"
        style="@style/horizontal_line_light_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_solid_ffffff_stroke_c8c7cc_radius_2"
        android:orientation="vertical"
        android:paddingBottom="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:scaleType="centerInside"
            android:src="@drawable/bg_report_title" />

        <ImageView
            android:id="@+id/item_report_picture_iv"
            android:layout_width="match_parent"
            android:layout_height="331dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/bg_solid_ffffff_stroke_c8c7cc_radius_2"
            android:scaleType="fitXY" />
    </LinearLayout>
</LinearLayout>
