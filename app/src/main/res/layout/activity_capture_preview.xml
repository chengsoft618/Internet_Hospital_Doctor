<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.longmaster.hospital.doctor.ui.HackyViewPager
        android:id="@+id/activity_capture_preview_viewpager_hvp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/color_66ffffff"
        android:gravity="right"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/activity_capture_preview_cancel_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="@string/capture_cancel"
            android:textColor="@color/text_color_333333_666666"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/activity_capture_preview_delete_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="@string/pic_browse_delete"
            android:textColor="@color/text_color_333333_666666"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_66ffffff">

        <TextView
            android:id="@+id/activity_capture_preview_upload_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/capture_photo_upload"
            android:textColor="@color/text_color_333333_666666"
            android:textSize="@dimen/font_size_16" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_capture_preview_pic_list_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/activity_capture_preview_upload_tv"
            android:layout_toLeftOf="@id/activity_capture_preview_upload_tv" />
    </RelativeLayout>
</RelativeLayout>
