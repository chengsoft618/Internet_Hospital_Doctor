<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:doctor="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.longmaster.hospital.doctor.view.AppActionBar
        android:id="@+id/activity_action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        doctor:function="title|left_btn|right_text"

        doctor:rightText="@string/chat_make_sure"
        doctor:rightTextClick="rightBtnClick"
        doctor:titleColor="@color/color_white"
        doctor:titleText="@string/chat_set_scheduling" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_choice_admissions_time"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/admission_choice_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_chat_admissions_date"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_choice_date"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/admission_choice_date_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/chat_choice_date"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_16"
                tools:text="2017-08-22 星期二" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_admisssions_date_arrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/admission_choice_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_chat_admissions_date"
            android:gravity="center_vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chat_choice_time"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/admission_choice_time_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="@string/chat_choice_time"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_16" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_chat_admisssions_date_arrow" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical"
        android:text="@string/chat_video_time_tips"
        android:textSize="@dimen/font_size_18" />
</LinearLayout>
