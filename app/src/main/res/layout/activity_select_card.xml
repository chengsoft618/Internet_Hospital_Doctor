<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:doctor="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_app_main_background"
    android:orientation="vertical">

    <cn.longmaster.hospital.doctor.view.AppActionBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        doctor:function="title|left_btn|right_btn"
        doctor:rightBtnClick="rightBtnClick"
        doctor:rightBtnImage="@drawable/ic_select_account_addaccount"
        doctor:titleText="@string/withdraw_select_card" />

    <View style="@style/horizontal_line_light" />

    <View
        style="@style/horizontal_line_light"
        android:layout_marginTop="15dp" />

    <ListView
        android:id="@+id/activity_select_card_list_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:overScrollMode="never" />

</LinearLayout>
