<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_my_data_operation_ll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_my_data_visible_tv"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@color/color_d3d3d3"
            android:gravity="center"
            android:text="可看"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_my_data_edit_name_tv"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@color/color_049eff"
            android:gravity="center"
            android:text="编辑"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_my_data_relation_tv"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@color/color_d9b800"
            android:gravity="center"
            android:text="@string/user_relation"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_my_data_delete_tv"
            android:layout_width="73dp"
            android:layout_height="match_parent"
            android:background="@color/color_ff6666"
            android:gravity="center"
            android:text="@string/rounds_medical_record_module_delete"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</LinearLayout>