<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_account_flow_service_fee_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_account_flow_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="劳务费"
                    android:textColor="@color/color_1a1a1a"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/item_account_flow_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="201231.10.022"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/font_size_12" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/item_account_flow_money_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:text="+120000"
                android:textColor="@color/color_0096ff"
                android:textSize="22sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_account_flow_detail_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_account_flow_hospital_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="朝天区人民医院  远程会诊:"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/item_account_flow_number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="编号：15263"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/item_account_flow_business_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="7dp"
                android:text="业务时间：2014.12.45 13:10"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_account_flow_merger_cash_detail_tv"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/bg_live_video_input_enter_room"
            android:gravity="center"
            android:text="@string/rounds_choice_doctor_choice_doctor_details"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_14"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_e5e5e5" />
    </LinearLayout>
</LinearLayout>