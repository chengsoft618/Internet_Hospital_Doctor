<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_shadow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="自定义"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/layotu_dcdrug_usage_custom_window_close_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="15dp"
            android:src="@mipmap/ic_dcissue_order_close" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_f2f2f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/layotu_dcdrug_usage_custom_window_cycle_et"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入天数"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/layotu_dcdrug_usage_custom_window_cyclenum_et"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@null"
                android:hint="请输入次数"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_f2f2f2" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/layotu_dcdrug_usage_custom_window_sure_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_049eff"
        android:gravity="center"
        android:padding="15dp"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_12" />

</LinearLayout>
