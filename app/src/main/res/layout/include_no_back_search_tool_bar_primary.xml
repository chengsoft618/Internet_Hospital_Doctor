<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_45aef8"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@drawable/bg_solid_36a3f0_radius_45">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:src="@mipmap/ic_data_manage_search" />

        <EditText
            android:id="@+id/include_search_title_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint=""
            android:imeOptions="actionSearch"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textColorHint="@color/color_77ccff"
            android:textSize="@dimen/font_size_13" />

        <ImageView
            android:id="@+id/include_search_clear_iv"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:padding="10dp"
            android:src="@mipmap/ic_data_manage_clear_search"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/include_search_operation_tv"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:text="取消"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_16" />

</LinearLayout>
