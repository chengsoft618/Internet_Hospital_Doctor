<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_rounds_mould_medical_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/bg_solid_ffffff_radius_5"
    android:orientation="vertical"
    android:paddingLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_rounds_mould_important_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_medical_highlight"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_rounds_mould_medical_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="病例号:"
            android:textColor="@color/color_7d7e7f"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_rounds_mould_medical_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:id="@+id/item_rounds_mould_delete_iv"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginLeft="10dp"
            android:padding="11dp"
            android:src="@mipmap/ic_rounds_add_del_patient" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_rounds_mould_medical_patient_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_rounds_mould_medical_patient_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/item_rounds_mould_medical_patient_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_rounds_mould_medical_illness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <cn.longmaster.hospital.doctor.view.MyGridView
            android:id="@+id/item_rounds_mould_medical_gv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:numColumns="5" />
    </LinearLayout>
</LinearLayout>