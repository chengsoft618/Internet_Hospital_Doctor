<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_solid_ffffff_radius_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="23dp"
            android:layout_height="15dp"
            android:background="@drawable/bg_solid_049eff_radius_3"
            android:gravity="center"
            android:text="发起"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_10" />

        <TextView
            android:id="@+id/item_platform_list_from_hospital_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_platform_list_from_department_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/font_size_16" />

    </LinearLayout>

    <View
        style="@style/horizontal_line_light_1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/item_platform_list_type_tv"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="类         型:"
            android:textColor="@color/color_7d7e7f"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_platform_list_type_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_toRightOf="@+id/item_platform_list_type_tv"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical">

            <View
                android:id="@+id/item_platform_list_approval_type_v"
                android:layout_width="8dp"
                android:layout_height="8dp" />

            <TextView
                android:id="@+id/item_platform_list_approval_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>


        <TextView
            android:id="@+id/item_platform_list_date_tv"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_platform_list_type_tv"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="月         份:"
            android:textColor="@color/color_7d7e7f"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_platform_list_date_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_platform_list_type_tv"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_platform_list_date_tv"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_platform_list_pay_money_tv"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_platform_list_date_desc_tv"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:text="垫付金额："
            android:textColor="@color/color_7d7e7f"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_platform_list_pay_money_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_platform_list_date_desc_tv"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/item_platform_list_pay_money_tv"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_14" />
    </RelativeLayout>

</LinearLayout>