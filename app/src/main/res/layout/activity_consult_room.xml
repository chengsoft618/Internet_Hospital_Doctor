<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_consult_room_screen_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2f2f2f">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_video_room" />

    <RelativeLayout
        android:id="@+id/activity_consult_room_big_video_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/activity_consult_room_mode_voice_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2f2f2f"
        android:gravity="center"
        android:text="@string/consult_room_voice_mode_voice_tip"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/activity_consult_room_members_leave_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2f2f2f"
        android:gravity="center"
        android:text="@string/video_room_state_members_leave"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        android:visibility="gone" />

    <!--顶部栏-->
    <RelativeLayout
        android:id="@+id/activity_consult_room_title_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/activity_consult_room_exit_room_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:drawableLeft="@drawable/ic_video_room_return"
            android:drawablePadding="6.67dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/video_room_exit_room"
            android:textColor="@color/text_color_white_b3b3b3"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activity_consult_room_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:drawableEnd="@drawable/ic_down_arrow_room"
            android:drawableRight="@drawable/ic_down_arrow_room"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_18" />

        <TextView
            android:id="@+id/activity_consult_room_clinic_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/activity_consult_room_record_tv"
            android:layout_toRightOf="@+id/activity_consult_room_exit_room_tv"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxEms="9"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:singleLine="true"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16"
            android:visibility="visible" />

        <TextView
            android:id="@+id/activity_consult_room_record_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawableStart="@drawable/ic_video_room_record"
            android:drawableLeft="@drawable/ic_video_room_record"
            android:drawablePadding="6dp"
            android:gravity="center_vertical"
            android:paddingTop="10dp"
            android:paddingRight="15dp"
            android:paddingBottom="10dp"
            android:text="@string/video_room_illness_history"
            android:textColor="@color/text_color_white_b3b3b3"
            android:textSize="@dimen/font_size_14" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_consult_room_bigVideo_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_consult_room_title_ll"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/activity_consult_room_user_avatar_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_consult_room_user_avatar_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_big_video_super_expert" />

            <TextView
                android:id="@+id/activity_consult_room_user_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/activity_consult_room_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />

            <ImageView
                android:id="@+id/activity_consult_room_network_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_big_video_signal_good" />

            <ImageView
                android:id="@+id/activity_consult_room_voice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_big_video_voice" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_consult_room_hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_consult_room_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_consult_room_title_ll"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_14" />

    <ImageView
        android:id="@+id/activity_consult_room_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_consult_room_time_tv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_logo_room" />

    <TextView
        android:id="@+id/activity_consult_room_help_core"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_below="@id/activity_consult_room_img"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_help_core" />

    <cn.longmaster.hospital.doctor.view.ToastLayoutView
        android:id="@+id/activity_consult_room_toast_tlv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clipChildren="false" />

    <cn.longmaster.hospital.doctor.view.HelpToastView
        android:id="@+id/activity_consult_room_help_toast_tlv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clipChildren="false" />


    <cn.longmaster.hospital.doctor.view.SlideMenu
        android:id="@+id/activity_consult_room_bottom_sm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/activity_consult_room_one_key_assist"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_one_key_assistance" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false" />

            <LinearLayout
                android:id="@+id/activity_consult_room_small_window_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_consulting_room_small_video_background"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_consult_room_hide_show_video_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_consulting_room_show_hide_video" />

                <HorizontalScrollView
                    android:id="@+id/activity_consult_room_small_video_scv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/activity_consult_room_small_video_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:clickable="false"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_consult_room_bottom_palette_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/activity_consult_room_bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_consult_room_speaker_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_btn_video_room_speaker_on" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_consult_room_mic_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_btn_video_room_mic_on" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_consult_room_av_mode_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_video_room_video_on" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_consult_room_cam_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_video_room_cam" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_consult_room_btns_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/activity_consult_room_call_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_btn_video_room_call"
                        android:drawablePadding="6dp"
                        android:gravity="center_horizontal"
                        android:text="@string/video_room_call"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/activity_consult_room_finish_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_video_room_finish" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/activity_consult_room_consult_list_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_btn_video_room_consult_list"
                        android:drawablePadding="6dp"
                        android:gravity="center_horizontal"
                        android:text="@string/video_room_consult_list"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </cn.longmaster.hospital.doctor.view.SlideMenu>
</RelativeLayout>
