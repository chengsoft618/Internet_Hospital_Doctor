<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/include_new_no_data_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_f2f2f2"
    android:gravity="center"
    android:orientation="vertical"
    android:visibility="visible">

    <ImageView
        android:id="@+id/include_new_no_data_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_no_data_list" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="暂无相关医生"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="点击【分诊中心】,由39帮您匹配最合适医生"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/include_new_no_data_tv"
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_solid_049eff_radius_45"
        android:gravity="center"
        android:text="分诊中心"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_18" />

</LinearLayout>
