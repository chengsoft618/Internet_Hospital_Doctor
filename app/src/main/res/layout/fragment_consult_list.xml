<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_solid_ffffff_radius_4"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_consult_list_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:text="@string/consult_room_consult_list"
        android:textColor="@color/color_app_main_color"
        android:textSize="@dimen/font_size_20" />

    <ImageButton
        android:id="@+id/fragment_consult_list_close_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@color/transparent"
        android:src="@drawable/bg_btn_consult_list_close" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_consult_list_list_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_consult_list_title_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:overScrollMode="never" />
</RelativeLayout>