<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_consult_list_bg_layout_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_consult_list_item"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/item_consult_list_disease_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_consult_list_case_general"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_consult_list_serial_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="1"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_consult_list_disease_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="7dp"
            android:text="普通病历"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_10" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/item_consult_list_patient_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="刘晓华"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/item_consult_list_appoint_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="就诊编号：12345"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_consult_list_consult" />

    <TextView
        android:id="@+id/item_consult_list_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="就诊完成"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_right_arrow_blue" />
</LinearLayout>
