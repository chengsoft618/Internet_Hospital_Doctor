<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/upload_result_item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

        <TextView
            android:id="@+id/item_upload_result_appointment_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="12545"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_upload_result_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_upload_result_appointment_id_tv"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_upload_result_state_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/item_upload_result_see_tv"
            android:textColor="@color/color_39d210"
            android:textSize="@dimen/font_size_14" />

        <TextView
            android:id="@+id/item_upload_result_see_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/text_color_45aef8_2b91d9"
            android:textSize="@dimen/font_size_14" />
    </RelativeLayout>
</LinearLayout>