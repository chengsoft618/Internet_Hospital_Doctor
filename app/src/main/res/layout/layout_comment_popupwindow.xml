<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_college_video_player_bottom_input_view"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white">

        <View
            android:id="@+id/activity_college_video_player_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_e2e2e2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/activity_college_video_player_line"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/activity_college_video_player_input_send"
            android:background="@drawable/bg_solid_ffffff_stroke_c8c7cc_radius_5"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="4dp"
                android:text="@string/medical_college_comment" />

            <EditText
                android:id="@+id/activity_college_video_player_input_edt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/medical_college_please_input"
                android:maxLength="200"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/activity_college_video_player_input_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/medical_college_text_num"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_12" />

            <ImageView
                android:id="@+id/activity_college_video_player_input_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_delete_input" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_college_video_player_input_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="@string/medical_college_send"
            android:textColor="@color/text_color_45aef8_2b91d9"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>
</LinearLayout>