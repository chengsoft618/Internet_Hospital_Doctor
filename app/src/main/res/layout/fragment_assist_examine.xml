<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f2f2f2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <View
                android:layout_width="3dp"
                android:layout_height="12dp"
                android:layout_marginLeft="15dp"
                android:background="@color/color_049eff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:text="检查资料:"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/fg_assist_examine_classify_rg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:orientation="horizontal"
                android:padding="1dp"
                android:visibility="visible">

                <RadioButton
                    android:id="@+id/fg_assist_examine_by_type_rb"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:background="@drawable/bg_assist_examine"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="@string/assist_examine_by_type"
                    android:textColor="@color/text_color_white_666666"
                    android:textSize="@dimen/font_size_14" />

                <RadioButton
                    android:id="@+id/fg_assist_examine_by_time_rb"
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/bg_assist_examine"
                    android:button="@null"
                    android:gravity="center"
                    android:text="@string/assist_examine_by_time"
                    android:textColor="@color/text_color_white_666666"
                    android:textSize="@dimen/font_size_14" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fg_assist_examine_ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
