<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="223dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_solid_ffffff_radius_10"
    android:orientation="vertical">


    <TextView
        android:id="@+id/heard_portrait_dialog_identity_tv"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/color_45aef8"
        android:textSize="@dimen/font_size_16" />

    <View style="@style/horizontal_line_light_1" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/heard_portrait_dialog_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="25dp" />

    <LinearLayout
        android:id="@+id/heard_portrait_dialog_patient_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/heard_portrait_dialog_patient_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_000000"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/heard_portrait_dialog_patient_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/heard_portrait_dialog_doctor_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/heard_portrait_dialog_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/heard_portrait_dialog_doctor_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_999999"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

        <TextView
            android:id="@+id/heard_portrait_dialog_doctor_hospital_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/heard_portrait_dialog_doctor_department"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>
</LinearLayout>