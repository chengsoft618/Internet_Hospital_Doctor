<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_f5f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_payment_photo_way_camera_ll"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_layout_item_common"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_photo_camera"
                android:drawableLeft="@drawable/ic_photo_camera"
                android:drawablePadding="30dp"
                android:gravity="center"
                android:text="@string/chat_camera"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>

        <View style="@style/horizontal_line_light_1" />

        <LinearLayout
            android:id="@+id/layout_payment_photo_way_album_ll"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_layout_item_common"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/ic_photo_album"
                android:drawableLeft="@drawable/ic_photo_album"
                android:drawablePadding="30dp"
                android:gravity="center"
                android:text="@string/chat_album"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_18" />
        </LinearLayout>

        <View
            style="@style/horizontal_line_light_1"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/layout_payment_photo_way_cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/bg_layout_item_common"
            android:drawablePadding="30dp"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_18" />
    </LinearLayout>
</LinearLayout>
