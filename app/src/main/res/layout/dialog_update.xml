<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_solid_ffffff_radius_10"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_update_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp"
                android:layout_marginBottom="32dp"
                android:gravity="center_horizontal"
                android:lineSpacingMultiplier="1.2"
                android:text="@string/version_update_info"
                android:textColor="@color/color_111111"
                android:textSize="@dimen/font_size_20" />

            <View style="@style/horizontal_line_light_1" />

            <TextView
                android:id="@+id/dialog_update_update_tv"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_dialog_btn_bottom_white_corners"
                android:gravity="center"
                android:text="@string/version_update_now"
                android:textColor="@color/text_color_157efb_white"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <ImageView
            android:id="@+id/dialog_update_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/bg_dialog_update_close" />
    </RelativeLayout>
</LinearLayout>