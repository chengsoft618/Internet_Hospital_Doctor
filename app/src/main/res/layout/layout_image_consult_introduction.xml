<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_99000000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginBottom="64.67dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="64.67dp"
        android:background="@drawable/bg_solid_ffffff_radius_10">

        <TextView
            android:id="@+id/layout_image_consult_introduction_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13.33dp"
            android:layout_marginRight="13.33dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/image_consult_introduce_title"
            android:textColor="@color/color_app_main_color"
            android:textSize="@dimen/font_size_20" />

        <View
            android:id="@+id/layout_image_consult_introduction_divide_view"
            style="@style/horizontal_line_light_1"
            android:layout_below="@+id/layout_image_consult_introduction_title_tv"
            android:layout_marginLeft="13.33dp"
            android:layout_marginRight="13.33dp"
            android:layout_marginTop="13.33dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/layout_image_consult_introduction_bottom_btn"
            android:layout_below="@+id/layout_image_consult_introduction_divide_view"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:text="@string/image_consult_introduce_introduce1"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:text="@string/image_consult_introduce_introduce2"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:text="@string/image_consult_introduce_item_title_1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="6.67dp"
                    android:text="@string/image_consult_introduce_item_content_1"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:text="@string/image_consult_introduce_item_title_2"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="6.67dp"
                    android:text="@string/image_consult_introduce_item_content_2"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="13.33dp"
                    android:text="@string/image_consult_introduce_item_title_3"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6.67dp"
                    android:layout_marginLeft="13.33dp"
                    android:layout_marginRight="13.33dp"
                    android:layout_marginTop="6.67dp"
                    android:text="@string/image_consult_introduce_item_content_3"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/font_size_14" />
            </LinearLayout>
        </ScrollView>

        <Button
            android:id="@+id/layout_image_consult_introduction_bottom_btn"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_dialog_btn_bottom_45aef8_corners"
            android:text="@string/confirm"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>
</RelativeLayout>