<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="50dp"
    android:paddingBottom="@dimen/dp_10">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:id="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_time_line_view"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginBottom="@dimen/dp_10"
            android:background="@color/color_e6e6e6" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:paddingRight="@dimen/dp_10">

            <ImageView
                android:id="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addiv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_dc_duty_visit_plan_details_adapter_add_redact_layout_addiv" />

            <TextView
                android:id="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addtv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addiv"
                android:text="添加随访计划"
                android:textColor="@color/color_049eff"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addtv"
                android:layout_alignStart="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addtv"
                android:layout_alignLeft="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addtv"
                android:layout_alignEnd="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addtv"
                android:layout_alignRight="@+id/item_dc_duty_visit_plan_details_adapter_add_redact_layout_addtv"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:background="@color/color_049eff" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>



