<?xml version="1.0" encoding="utf-8"?>
<cn.longmaster.hospital.doctor.view.SlidingButtonView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_my_data_delete_view_sbv"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/color_white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_wait_rounds_patient_line">

        <LinearLayout
            android:id="@+id/item_my_data_delete_view"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/item_wait_rounds_patient_view"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_wait_rounds_patient_relation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_wait_patient_relation"
                android:gravity="center"
                android:text="@string/activity_wait_rounds_patient_relation"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_wait_rounds_patient_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_marginRight="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_wait_rounds_patient_alike_department_im"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_alike_department"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/item_wait_rounds_patient_import"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_medical_highlight"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/item_wait_rounds_patient_info_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_1a1a1a"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_wait_rounds_patient_doctor_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/color_1a1a1a"
                    android:textSize="@dimen/font_size_14"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_wait_rounds_patient_appeal_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_14" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_wait_rounds_patient_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_12" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_wait_rounds_patient_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_12" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</cn.longmaster.hospital.doctor.view.SlidingButtonView>
