<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="223dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_solid_ffffff_radius_10"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="@string/table_doctor_assistant"
            android:textColor="@color/color_45aef8"
            android:textSize="@dimen/font_size_16" />

        <View style="@style/horizontal_line_light_1" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/layout_dialog_doctor_name_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/layout_dialog_doctor_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="霍勇"
                android:textColor="@color/color_000000"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/layout_dialog_patient_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:drawableLeft="@drawable/ic_doctor_assistant_phone"
                android:drawablePadding="5dp"
                android:text="13658895648"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/layout_dialog_doctor_send_massage_tv"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/bg_dialog_send_message"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/visit_dialog_send_massage"
                android:textColor="@color/color_36a3f0"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>