<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:doctor="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_actual_combat"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical"
    tools:context="cn.longmaster.hospital.doctor.ui.college.ActualCombatActivity">

    <cn.longmaster.hospital.doctor.view.AppActionBar
        android:id="@+id/activity_actual_combat_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        doctor:function="title|left_btn|right_text"
        doctor:rightText="@string/medical_college_newest"
        doctor:rightTextClick="rightClick"
        doctor:rightTextColor="@color/text_color_white_aedeff"
        doctor:titleText="@string/medical_college_forum" />

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/activity_actual_combat_srl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/activity_actual_combat_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="7dp"
            android:scrollbars="none" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

</LinearLayout>
