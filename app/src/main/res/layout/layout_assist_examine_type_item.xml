<?xml version="1.0" encoding="utf-8"?><!--辅助检查资料分类-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <View
        android:id="@+id/layout_assist_examine_type_item_divider"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_marginTop="13dp"
        android:background="@color/color_dcdcdc" />

    <TextView
        android:id="@+id/layout_assist_examine_type_item_sub_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_14" />

    <cn.longmaster.hospital.doctor.view.ScrollGridView
        android:id="@+id/layout_assist_examine_type_item_image_gv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="13dp"
        android:gravity="center"
        android:horizontalSpacing="6.7dp"
        android:listSelector="@color/color_transport"
        android:numColumns="4"
        android:verticalSpacing="6.7dp" />
</LinearLayout>