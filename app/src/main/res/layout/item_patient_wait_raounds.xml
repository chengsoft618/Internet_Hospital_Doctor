<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_solid_ffffff_radius_10">

    <TextView
        android:id="@+id/item_patient_wait_rounds_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_gender_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/item_patient_wait_rounds_name_tv"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_16" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_age_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/item_patient_wait_rounds_gender_tv"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_16" />

    <CheckBox
        android:id="@+id/item_patient_wait_rounds_choose_cb"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_above="@+id/item_patient_wait_rounds_v"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="4dp"
        android:button="@drawable/bg_cb_select_wait_rounds_patient_select" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_association_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_toLeftOf="@+id/item_patient_wait_rounds_association_num_tv"
        android:text="就诊编号："
        android:textColor="@color/color_7d7e7f"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_association_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="19dp"
        android:layout_marginRight="10dp"
        android:text="12345658"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_14"
        android:visibility="gone" />

    <View
        android:id="@+id/item_patient_wait_rounds_v"
        style="@style/horizontal_line_light_1"
        android:layout_below="@+id/item_patient_wait_rounds_name_tv"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_in_hospital_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_wait_rounds_v"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="住院号:"
        android:textColor="#ff7d7e7f"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_in_hospital_num_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_wait_rounds_v"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/item_patient_wait_rounds_in_hospital_num_tv"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_patient_num_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_wait_rounds_in_hospital_num_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="病例号:"
        android:textColor="@color/color_7d7e7f"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_patient_num_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_wait_rounds_in_hospital_num_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/item_patient_wait_rounds_patient_num_tv"
        android:maxLines="1"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_confirm_sick_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_wait_rounds_patient_num_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="诊断疾病:"
        android:textColor="@color/color_7d7e7f"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/item_patient_wait_rounds_confirm_sick_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_wait_rounds_patient_num_tv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/item_patient_wait_rounds_confirm_sick_tv"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/color_333333"
        android:textSize="@dimen/font_size_14" />
</RelativeLayout>
