<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <cn.longmaster.hospital.doctor.view.MyStatusBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_049eff" />

    <include layout="@layout/include_toolbar_primary_title" />

    <RadioGroup
        android:id="@+id/activity_data_manager_radio_group"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/activity_data_manager_patient_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_data_manage_tab"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:text="患者材料"
            android:textColor="@drawable/bg_data_manage_rb_txt"
            android:textSize="@dimen/font_size_16" />

        <RadioButton
            android:id="@+id/activity_data_manager_confirm_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_data_manage_tab"
            android:button="@null"
            android:gravity="center"
            android:text="确认单"
            android:textColor="@drawable/bg_data_manage_rb_txt"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/activity_data_manager_platform_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_data_manage_tab"
            android:button="@null"
            android:gravity="center"
            android:text="平台服务费"
            android:textColor="@drawable/bg_data_manage_rb_txt"
            android:textSize="@dimen/font_size_16"
            android:visibility="gone" />

        <RadioButton
            android:id="@+id/activity_data_manager_my_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_data_manage_tab"
            android:button="@null"
            android:gravity="center"
            android:text="我的资料"
            android:textColor="@drawable/bg_data_manage_rb_txt"
            android:textSize="@dimen/font_size_16" />
    </RadioGroup>

    <View style="@style/horizontal_line_light_1" />

    <FrameLayout
        android:id="@+id/activity_data_manager_fl"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" />
</LinearLayout>