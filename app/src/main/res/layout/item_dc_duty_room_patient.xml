<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/bg_solid_f2f2f2_radius_5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_patient_name_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="32dp"
        android:layout_toLeftOf="@+id/item_patient_pic_iv"
        android:lines="1"
        android:maxLines="1"
        android:textColor="@color/color_1a1a1a"
        android:textSize="@dimen/font_size_22" />

    <TextView
        android:id="@+id/item_patient_pic_num_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_patient_name_tv"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:layout_toLeftOf="@+id/item_patient_pic_iv"
        android:lines="1"
        android:maxLines="1"
        android:text="共15张资料图片"
        android:textColor="@color/color_666666"
        android:textSize="@dimen/font_size_16" />

    <ImageView
        android:id="@+id/item_patient_pic_iv"
        android:layout_width="108dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:src="@mipmap/ic_dc_duty_room_patient_pic_num" />
</RelativeLayout>