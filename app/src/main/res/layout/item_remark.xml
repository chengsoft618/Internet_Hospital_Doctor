<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="20dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_remark_photo_aiv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bg_remark_photo_admin" />

        <TextView
            android:id="@+id/item_remark_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="管理员"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_remark_time_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="2015-07-25"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_12" />

        <TextView
            android:id="@+id/item_remark_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/bg_remark_text"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="这个患者挺有意思哒这个患者挺有意思哒这个患者挺有意思哒这个患者挺有意思哒"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_12" />
    </LinearLayout>
</LinearLayout>
