<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_eaeaea"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/item_share_dialog_img_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/ic_share_wei_chat" />

    <TextView
        android:id="@+id/item_share_dialog_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:text="@string/share_wei_chat"
        android:textColor="@color/color_000000"
        android:textSize="@dimen/font_size_10" />

    <View
        android:id="@+id/item_share_dialog_line_view"
        style="@style/horizontal_line_light_1" />
</LinearLayout>
