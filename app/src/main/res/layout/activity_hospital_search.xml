<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_edeff2"
    android:orientation="vertical">

    <cn.longmaster.hospital.doctor.view.MyStatusBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_049eff" />

    <include
        layout="@layout/include_search_tool_bar_primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/activity_hospital_search_record_title_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:text="@string/history_record"
            android:textColor="@color/color_1a1a1a"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:id="@+id/activity_hospital_search_clear_iv"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="14dp"
            android:src="@drawable/ic_btn_delete" />
    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:id="@+id/activity_hospital_search_record_fbl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7.5dp"
        android:layout_marginRight="7.5dp"
        app:alignContent="flex_start"
        app:flexWrap="wrap" />
</LinearLayout>
