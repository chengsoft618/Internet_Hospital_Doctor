<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_dcroom_screen_rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_2f2f2f"
    android:orientation="vertical">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/bg_video_room" />

    <RelativeLayout
        android:id="@+id/activity_dcroom_big_video_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/activity_dcroom_mode_voice_tip_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2f2f2f"
        android:gravity="center"
        android:text="@string/consult_room_voice_mode_voice_tip"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/activity_dcroom_members_leave_tv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_2f2f2f"
        android:gravity="center"
        android:text="@string/video_room_state_members_leave"
        android:textColor="@color/color_white"
        android:textSize="24sp"
        android:visibility="gone" />

    <!--顶部栏-->
    <RelativeLayout
        android:id="@+id/activity_dcroom_title_ll"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/activity_dcroom_exit_room_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:contentDescription="@null"
            android:drawableLeft="@mipmap/ic_actionbar_back_white"
            android:drawablePadding="6.67dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="@string/video_room_exit_room"
            android:textColor="@color/text_color_white_b3b3b3"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_dcroom_bigVideo_info_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dcroom_title_ll"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/activity_dcroom_user_avatar_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/activity_dcroom_user_avatar_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_big_video_super_expert" />

            <TextView
                android:id="@+id/activity_dcroom_user_type_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />

            <TextView
                android:id="@+id/activity_dcroom_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_16" />

            <ImageView
                android:id="@+id/activity_dcroom_network_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_big_video_signal_good" />

            <ImageView
                android:id="@+id/activity_dcroom_voice_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_big_video_voice" />
        </LinearLayout>

        <TextView
            android:id="@+id/activity_dcroom_hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_dcroom_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dcroom_title_ll"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_14" />

    <ImageView
        android:id="@+id/activity_dcroom_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_dcroom_time_tv"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:src="@drawable/ic_logo_room" />

    <ImageView
        android:id="@+id/act_dcroom_record_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/activity_dcroom_img"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_dc_duty_room_record" />

    <ImageView
        android:id="@+id/act_dcroom_update_data"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/act_dcroom_record_iv"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_dc_duty_room_data_upload" />

    <cn.longmaster.hospital.doctor.view.ToastLayoutView
        android:id="@+id/activity_dcroom_toast_tlv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clipChildren="false" />

    <cn.longmaster.hospital.doctor.view.HelpToastView
        android:id="@+id/activity_dcroom_help_toast_tlv"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:clipChildren="false" />


    <cn.longmaster.hospital.doctor.view.SlideMenu
        android:id="@+id/activity_dcroom_bottom_sm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:clickable="false"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:clickable="false" />

            <LinearLayout
                android:id="@+id/activity_dcroom_small_window_ll"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/bg_consulting_room_small_video_background"
                android:clickable="false"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/activity_dcroom_hide_show_video_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_consulting_room_show_hide_video" />

                <HorizontalScrollView
                    android:id="@+id/activity_dcroom_small_video_scv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/activity_dcroom_small_video_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="75dp"
                        android:clickable="false"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_dcroom_bottom_palette_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:visibility="gone">

            <LinearLayout
                android:id="@+id/activity_dcroom_bottom_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_dcroom_speaker_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_btn_video_room_speaker_on" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_dcroom_mic_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_btn_video_room_mic_on" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_dcroom_av_mode_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_video_room_video_on" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/activity_dcroom_cam_ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:src="@drawable/ic_video_room_cam" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/activity_dcroom_btns_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="bottom"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        android:id="@+id/activity_dcroom_call_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableTop="@drawable/ic_btn_video_room_call"
                        android:drawablePadding="6dp"
                        android:gravity="center_horizontal"
                        android:text="@string/video_room_call"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/font_size_12" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </cn.longmaster.hospital.doctor.view.SlideMenu>

    <FrameLayout
        android:id="@+id/activity_dcroom_consult_list_fl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:background="@color/transparent"
        android:visibility="gone" />
</RelativeLayout>
