<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:id="@+id/item_doctor_list_space_view"
        android:layout_width="wrap_content"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_doctor_card"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_doctor_list_photo_iv"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="13dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_doctor_list_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_333333"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/item_doctor_list_level_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/font_size_12" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_doctor_list_hospital_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/item_doctor_list_department_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/font_size_12" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/item_doctor_list_score_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="15dp"
            android:gravity="center"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item_doctor_score"
                android:layout_width="65dp"
                android:layout_height="18dp"
                android:layout_marginBottom="10dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/item_doctor_list_view"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/item_doctor_list_score"
                    android:background="@drawable/bg_rounds_recommend_left"
                    android:gravity="center"
                    android:text="è"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_size_12" />

                <TextView
                    android:id="@+id/item_doctor_list_score"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bg_rounds_recommend_right"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:paddingRight="2dp"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/font_size_12" />
            </RelativeLayout>

            <TextView
                android:id="@+id/item_doctor_list_choice_btn_tv"
                android:layout_width="65dp"
                android:layout_height="30dp"
                android:background="@drawable/bg_live_video_input_enter_room"
                android:gravity="center"
                android:text="@string/rounds_choice_doctor_choice_doctor_details"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_14" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
