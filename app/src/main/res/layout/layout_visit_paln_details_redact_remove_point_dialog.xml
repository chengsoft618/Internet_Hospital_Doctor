<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_solid_ffffff_radius_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="90dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/layout_visit_plan_details_redact_remove_point_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="确定删除该随访计划节点"
            android:textColor="@color/color_black"
            android:textSize="@dimen/font_size_18"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/btn_height">

        <TextView
            android:id="@+id/layout_visit_plan_details_redact_remove_point_positive_tv"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/center_view"
            android:background="@drawable/bg_solid_999898_radius_5"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold"
            android:visibility="visible" />

        <View
            android:id="@+id/center_view"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/color_white"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/layout_visit_plan_details_redact_remove_point_negative_tv"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/center_view"
            android:background="@drawable/bg_solid_ff0000_radius_5"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16"
            android:textStyle="bold"
            android:visibility="visible" />

    </RelativeLayout>

</LinearLayout>