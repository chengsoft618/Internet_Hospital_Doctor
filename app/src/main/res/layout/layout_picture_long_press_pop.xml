<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_picture_long_pressed"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/picture_long_press_add_medical_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="3dp"
            android:text="@string/chat_add_medical_record"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/picture_long_press_save_to_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="2dp"
            android:text="@string/chat_save_to_local"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_16" />
    </LinearLayout>
</LinearLayout>