<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@color/color_c8c7cc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:id="@+id/item_view_advance_child_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="@string/advance_num"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_view_advance_child_appointment_id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/item_view_advance_child_num"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_view_advance_child_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="end"
            android:maxEms="4"
            android:singleLine="true"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/font_size_16" />

        <TextView
            android:id="@+id/item_view_advance_child_money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:textColor="@color/color_ff2c2c"
            android:textSize="@dimen/font_size_16" />
    </RelativeLayout>
</LinearLayout>