<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp">

        <TextView
            android:id="@+id/item_doctor_list_filter_hospital_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_solid_edf1fd_radius_8"
            android:button="@null"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="北京大学第一附属医院"
            android:textColor="@color/color_049eff"
            android:textSize="@dimen/font_size_14" />

        <ImageView
            android:id="@+id/item_doctor_list_filter_hospital_del_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@+id/item_doctor_list_filter_hospital_tv"
            android:layout_marginLeft="-10dp"
            android:layout_marginBottom="-10dp"
            android:layout_toRightOf="@+id/item_doctor_list_filter_hospital_tv"
            android:src="@mipmap/ic_doctor_list_filter_del" />
    </RelativeLayout>

</FrameLayout>