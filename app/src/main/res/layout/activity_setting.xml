<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:doctor="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <cn.longmaster.hospital.doctor.view.AppActionBar
        android:id="@+id/activity_browser_actionbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        doctor:function="title|left_btn"
        doctor:titleText="@string/user_set" />

    <ImageView
        android:id="@+id/activity_set_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_browser_actionbar"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@null"
        android:src="@drawable/ic_logo_doctor_workstation" />

    <TextView
        android:id="@+id/activity_set_version_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_set_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="@string/version_number"
        android:textColor="@color/color_595757"
        android:textSize="@dimen/font_size_12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_set_version_number_tv"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_c8c7cc" />

        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_change_passed_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/user_change_password"
            doctor:sRightIconRes="@drawable/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_c8c7cc" />

        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_clear_cache_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/clear_cache"
            doctor:sRightIconRes="@drawable/ic_right_arrow"
            doctor:sRightTextColor="@color/color_999999"
            doctor:sRightTextSize="@dimen/font_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_c8c7cc" />

        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_contact_us_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/user_contact_us"
            doctor:sRightIconRes="@drawable/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_c8c7cc" />

        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_common_problems_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/user_faq"
            doctor:sRightIconRes="@drawable/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_c8c7cc" />

        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_service_terms_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/user_service_contract"
            doctor:sRightIconRes="@drawable/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_c8c7cc" />

        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_newbie_guide_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/newbie_guide"
            doctor:sRightIconRes="@drawable/ic_right_arrow" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:background="@color/color_c8c7cc" />


        <com.allen.library.SuperTextView
            android:id="@+id/activity_set_version_update_stv"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:paddingLeft="6dp"
            doctor:sLeftTextColor="@color/color_333333"
            doctor:sLeftTextSize="@dimen/font_size_14"
            doctor:sLeftTextString="@string/version_update"
            doctor:sRightIconRes="@drawable/ic_right_arrow"
            doctor:sRightTextColor="@color/color_999999"
            doctor:sRightTextSize="@dimen/font_size_14"
            doctor:sRightTextString="@string/version_is_new" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/color_c8c7cc" />
    </LinearLayout>

    <ImageView
        android:id="@+id/activity_contact_us_logo_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/activity_company_trademark"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_logo_internet_hospital" />

    <TextView
        android:id="@+id/activity_company_trademark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/company_trademark"
        android:textColor="@color/color_999999"
        android:textSize="@dimen/font_size_10" />
</RelativeLayout>
