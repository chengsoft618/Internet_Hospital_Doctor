<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_video_list_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="25dp"
    android:background="@color/color_white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_video_list_ic"
            android:layout_width="32dp"
            android:layout_height="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_video_list_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:textColor="@color/color_45aef8"
                    android:textSize="@dimen/font_size_14" />

                <TextView
                    android:id="@+id/item_video_list_department"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:maxEms="5"
                    android:singleLine="true"
                    android:textColor="@color/color_45aef8"
                    android:textSize="@dimen/font_size_10" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_video_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:lines="1"
                android:singleLine="true"
                android:textColor="@color/color_b7b7b7"
                android:textSize="@dimen/font_size_10" />
        </LinearLayout>
    </LinearLayout>

    <cn.longmaster.doctorlibrary.customview.ProportionLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:scaleSize="0.75">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_video_list_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_college_praise" />

            <ImageView
                android:id="@+id/item_video_list_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_recommend" />

            <TextView
                android:id="@+id/item_video_list_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/ic_playback"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_10" />

            <TextView
                android:id="@+id/item_video_list_introduce"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentBottom="true"
                android:background="@color/color_80000000"
                android:gravity="center"
                android:lines="2"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:singleLine="true"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_12" />
        </RelativeLayout>
    </cn.longmaster.doctorlibrary.customview.ProportionLayout>
</LinearLayout>